
@{
    ViewData["Title"] = "Index";
}

@model IEnumerable<SRegistrationModel>
<div class="container p-3">
    <div class="row p-4">
        <div class="col-6">
            <h1>Academic Year 2022-2030</h1>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Student" asp-action="AddStudent" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i>&nbsp;Add Student</a>
        </div>
    </div>
</div>

<table class="table table-border table-stripped" width="100%">
    <thead>
        <tr>
            <th>Student Id</th>
            <th>Student Name</th>
            <th>Age</th>
            <th>Gender</th>
            <th>Address</th>
            <th>City</th>
            <th>State</th>
            <th>Country</th>
            <th>Options</th>

        </tr>
    </thead>
    <tbody>
        @if (Model.Count() > 0)
        {
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.RollNo</td>
                    <td>@item.StudentName</td>
                    <td>@item.Age</td>
                    <td>@item.Gender</td>
                    <td>@item.Address</td>
                    <td>@item.City</td>
                    <td>@item.State</td>
                    <td>@item.Country</td>
                    <td>
                        <a asp-controller="Student" asp-action="Edit" asp-route-id="@item.RollNo">Edit</a>
                        &nbsp;<a asp-controller="Student" asp-action="DeleteRecord" asp-route-id="@item.RollNo" 
                        onclick="return confirmtodelete();">Delete</a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr><td colspan="3" align="center" class="text-bg-danger">No Records found</td></tr>
        }

    </tbody>
    <tr></tr>
</table>
<script type="text/javascript">
    function confirmtodelete()
    {
        return confirm("Are you sure to delete?");
            //alert("Are you sure to delete?");
    }
</script>